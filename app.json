  "scripts": {
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "DATA_FOLDER": {
      "required": true
    },
    "FIREBASE_AUTH_PROVIDER_X509_CERT_URL": {
      "required": true
    },
    "FIREBASE_AUTH_URI": {
      "required": true
    },
    "FIREBASE_CLIENT_EMAIL": {
      "required": true
