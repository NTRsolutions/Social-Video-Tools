      "required": true
    },
    "FIREBASE_CLIENT_X509_CERT_URL": {
      "required": true
    },
    "FIREBASE_DATABASEURL": {
      "required": true
    },
    "FIREBASE_PRIVATE_KEY": {
      "required": true
    },
    "FIREBASE_PRIVATE_KEY_ID": {
      "required": true
    },
    "FIREBASE_PROJECT_ID": {
      "required": true
    },
    "FIREBASE_TOKEN_URI": {
      "required": true
    },
    "FIREBASE_TYPE": {
      "required": true
    },
