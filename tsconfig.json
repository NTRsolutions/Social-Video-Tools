{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": [
      "es6-shim",
      "node"
    ]
  },
  
  "include": [
    "server/**/*.ts",
    "worker/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
